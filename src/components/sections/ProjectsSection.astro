---
import ProjectCard from '../ProjectCard.astro';
import professor from '../../assets/images/projects/professor.webp'
import peslevelup from '../../assets/images/projects/peslevelup.webp'
import nave from '../../assets/images/projects/nave.webp'

const projects = [
  {
    title: "Navegando IA",
    category: "Website",
    description: "A website for the company NAVE A VELA, with a guide of essential guidelines on the use of AI in schools.",
    image: nave,
    imageAlt: "A website for the company NAVE A VELA, with a guide of essential guidelines on the use of AI in schools.",
    technologies: ["Astro","Tailwind", "JavaScript", "HTML", "CSS"],
    liveUrl: "https://navegandoia.com.br/",
    codeUrl: 'hhttps://github.com/DuarteRenan/navegandoia',
    featured: true,
    hueValue: '150'
  },
  {
    title: "Professor Inspirador",
    category: "Landing Page",
    description: "Website for the Inspiring Teacher contest. Designed to guide and inspire participants with a responsive and interactive user experience.",
    image: professor,
    imageAlt: "Professor Inspirador contest website landing page",
    technologies: ["Tailwind", "Astro", "JavaScript", "HTML", "CSS"],
    liveUrl: "https://professorinspirador2025.com.br/",
    codeUrl: 'https://github.com/DuarteRenan/professorinspirador2025',
    featured: true,
    hueValue: '200'
  },
  {
    title: "PES Level Up",
    category: "Landing Page",
    description: "AI-powered digital platform that applies, corrects, and generates detailed reports on English language learning performance.",
    image: peslevelup,
    imageAlt: "PES Level Up AI-powered English learning platform by Renan Duarte",
    technologies: ["Tailwind", "Astro", "JavaScript", "HTML", "CSS"],
    liveUrl: "https://peslevelup.com.br/",
    codeUrl: 'https://github.com/DuarteRenan/peslevelup',
    featured: true,
    hueValue: '174'
  }
];
---

<section data-aos="fade-up" id="projects" class="py-16 md:py-24 px-4 sm:px-6 lg:px-8">
  <div class="relative max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="mb-20 md:mb-28">
      <h2 class="text-4xl md:text-5xl lg:text-6xl text-white font-bold font-title mb-6 leading-tight">
        Creative Solutions
      </h2>
      <p class="text-base md:text-lg text-gray-400 max-w-3xl">
        I develop landing pages and email marketing designs with a focus on performance and modern aesthetics.
      </p>
    </div>

    <!-- Projects Stack -->
    <div class="space-y-20 md:space-y-32">
      {projects.map((project, index) => (
        <ProjectCard 
          title={project.title}
          category={project.category}
          description={project.description}
          image={project.image}
          imageAlt={project.imageAlt}
          technologies={project.technologies}
          liveUrl={project.liveUrl}
          codeUrl={project.codeUrl}
          isOdd={index % 2 === 1}
          hueValue={project.hueValue}
        />
      ))}
    </div>

    <!-- Call to Action Section -->
    <div class="mt-24 md:mt-32 pt-24 md:pt-32 border-t border-white/10 text-center">
      <p class="text-lg text-gray-400 mb-8">
        Want to see more of my work?
      </p>
      <a 
        href="https://github.com/DuarteRenan?tab=repositories" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="inline-flex items-center gap-2 px-8 py-4 rounded-full bg-sky-600 text-white font-semibold transition-all font-title hover:bg-sky-500 hover:shadow-lg hover:shadow-sky-500/20 focus:outline-2 focus:outline-sky-400 focus:outline-offset-2 group/cta"
      >
        <span>View All Repositories</span>
        <svg class="w-5 h-5 group-hover/cta:translate-x-1 transition-transform" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
          <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.778L10.8076 18.3638L16.1716 12.9999H4V10.9999H16.1716Z"></path>
        </svg>
      </a>
    </div>
  </div>
</section>