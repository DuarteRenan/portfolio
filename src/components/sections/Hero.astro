<section class="relative text-center" transition:name="hero-section">
  <div class="container mx-auto px-4 py-28 flex flex-col gap-4">
    <h1 
      class="text-5xl text-neutral-950 font-bold font-title"
      transition:name="main-title"
      data-animate="fade-down"
      data-delay="100"
    >
        Renan Duarte
    </h1>
    <p 
      class="text-base text-neutral-400 font-base max-w-prose mx-auto"
      data-animate="fade-up"
      data-delay="300"
    >
        Front-end developer specializing in creating exceptional digital experiences
    </p>
    <div 
      class="flex justify-center gap-2"
      data-animate="fade-up"
      data-delay="500"
    >
        <!-- Link para a página de projetos -->
        <a 
          href="/projects" 
          class="bg-neutral-950 text-neutral-50 rounded-full py-2 px-4 hover:bg-blue-500 hover:text-neutral-950 transition-all cursor-pointer hover:shadow-xl inline-block text-decoration-none"
        >
          See projects
        </a>
        
        <!-- Segundo botão -->
        <button 
          class="bg-transparent border-1 rounded-full py-2 px-4 border-neutral-950 text-neutral-950 hover:bg-neutral-50 hover:text-neutral-950 transition-all cursor-pointer hover:shadow-xl"
        >
          Get in touch
        </button>
    </div>
  </div>
</section>